<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>ke.co.skyworld</groupId>
  <artifactId>esb-monitoring-api</artifactId>
  <name>esb-monitoring-api</name>
  <version>0.0.1</version>
  <url>http://www.example.com</url>
  <build>
    <testSourceDirectory>src/test/java</testSourceDirectory>
    <resources>
      <resource>
        <directory>src/main/java</directory>
        <excludes>
          <exclude>**/*.java</exclude>
        </excludes>
      </resource>
      <resource>
        <directory>src/main/resources</directory>
      </resource>
    </resources>
    <finalName>esb_monitoring_api_${project.version}</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>${maven-compiler-plugin.version}</version>
        <configuration>
          <source>8</source>
          <target>8</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>${maven-shade-plugin.version}</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <inherited>false</inherited>
          </execution>
        </executions>
        <configuration>
          <filters>
            <filter>
              <artifact>*:*</artifact>
              <excludes>
                <exclude>META-INF/*.SF</exclude>
                <exclude>META-INF/*.DSA</exclude>
                <exclude>META-INF/*.RSA</exclude>
              </excludes>
            </filter>
          </filters>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>${maven-jar-plugin.version}</version>
        <configuration>
          <archive>
            <manifest>
              <mainClass>ke.co.skyworld.Main</mainClass>
            </manifest>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>1.2.1</version>
        <configuration>
          <executable>java</executable>
          <arguments>
            <argument>-jar</argument>
            <argument>target/${project.build.finalName}.jar</argument>
          </arguments>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>${maven-surefire-plugin}</version>
        <configuration>
          <systemPropertyVariables>
            <propertyName>java.library.path</propertyName>
            <buildDirectory>/usr/local/lib</buildDirectory>
          </systemPropertyVariables>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>org.jboss.logging</groupId>
      <artifactId>jboss-logging-processor</artifactId>
      <version>2.1.0.Final</version>
      <scope>provided</scope>
      <exclusions>
        <exclusion>
          <artifactId>jboss-logging-annotations</artifactId>
          <groupId>org.jboss.logging</groupId>
        </exclusion>
        <exclusion>
          <artifactId>jdeparser</artifactId>
          <groupId>org.jboss.jdeparser</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.5</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.assertj</groupId>
      <artifactId>assertj-core</artifactId>
      <version>2.6.0</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <properties>
    <jboss.logging.version>2.1.0.Final</jboss.logging.version>
    <freemaker.version>2.3.28</freemaker.version>
    <mysql-connector-java-version>8.0.11</mysql-connector-java-version>
    <connection.manager.version>2.2</connection.manager.version>
    <slf4j-api.version>1.7.25</slf4j-api.version>
    <jackson.version>2.9.6</jackson.version>
    <jbcrypt.version>0.4</jbcrypt.version>
    <jboss.xnio.version>3.3.8.Final</jboss.xnio.version>
    <poi-version>4.1.1</poi-version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <jansi.version>1.17.1</jansi.version>
    <log4j.version>1.2.17</log4j.version>
    <junit.version>4.5</junit.version>
    <simple-java-mail-version>6.4.3</simple-java-mail-version>
    <fastcsv.version>1.0.3</fastcsv.version>
    <maven-jar-plugin.version>3.0.2</maven-jar-plugin.version>
    <slf4j-simple.version>1.7.25</slf4j-simple.version>
    <javax.mail.version>1.6.0</javax.mail.version>
    <maven-surefire-plugin>2.22.2</maven-surefire-plugin>
    <commons.codec.version>1.11</commons.codec.version>
    <commons.collections.version>4.1</commons.collections.version>
    <maven-shade-plugin.version>3.2.1</maven-shade-plugin.version>
    <maven-compiler-plugin.version>3.5.1</maven-compiler-plugin.version>
    <fastexcel.version>0.10.11</fastexcel.version>
    <JCDP.version>2.0.3.1</JCDP.version>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    <jaxb.api.version>2.3.1</jaxb.api.version>
    <simplecaptcha.version>1.2.1</simplecaptcha.version>
    <com.captcha.version>4.0.beta3.7</com.captcha.version>
    <jboss.logmanager.version>2.0.0.Final</jboss.logmanager.version>
    <org.assertj.version>2.6.0</org.assertj.version>
    <commons.beanutils.version>1.9.3</commons.beanutils.version>
    <openhtml.version>1.0.3</openhtml.version>
    <undertow.version>2.0.9.Final</undertow.version>
  </properties>
</project>
